<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akingyin.img">

  <application
      android:allowBackup="true"

      android:supportsRtl="true">


    <activity
        android:name=".ImagesDetailActivity"
        android:hardwareAccelerated="true"
        android:screenOrientation="portrait" />
    <activity
        android:name=".ImageTextPagerActivity"
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:hardwareAccelerated="true"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
         />


    <activity
        android:name=".ImageTextTypesActivity"
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:hardwareAccelerated="true"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
         />

    <activity
        android:name=".ui.ImageVideoPagerActivity"
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:hardwareAccelerated="true"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.TranslucentNavigationBar" />


  </application>
</manifest>