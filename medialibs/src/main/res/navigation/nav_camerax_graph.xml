<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_camerax_graph"
    app:startDestination="@id/permissions_fragment">

  <fragment
      android:id="@+id/permissions_fragment"
      android:name="com.akingyin.media.camerax.ui.PermissionsCameraFragment"
      android:label="PermissionsFragment">
    <action
        android:id="@+id/action_permissions_to_camera"
        app:destination="@id/camerax_fragment"
        app:popUpTo="@id/permissions_fragment"
        app:popUpToInclusive="true" />
  </fragment>

  <fragment
      android:id="@+id/camerax_fragment"
      android:name="com.akingyin.media.camerax.ui.CameraxFragment"
      android:label="CameraFragment">
    <action
        android:id="@+id/action_camera_to_permissions"
        app:destination="@id/permissions_fragment"
        app:popUpTo="@id/camerax_fragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_camera_to_photo"
        app:popUpTo="@id/camerax_fragment"
        app:popUpToInclusive="true"
        app:destination="@id/camerax_photo" />
    <argument
        android:name="fileDir"
        app:argType="string"
        app:nullable="false" />
    <argument
        android:name="fileName"
        app:argType="string"
        app:nullable="false" />
  </fragment>

  <fragment
      android:id="@+id/camerax_photo"
      android:name="com.akingyin.media.camerax.ui.PhotoFragment"
      android:label="PhotoFragment">
    <argument
        android:name="filePath"
        app:argType="string"
        app:nullable="false" />
  </fragment>
</navigation>