<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    android:layout_margin="3dp"
    android:padding="2dp"

    app:cardElevation="3dp"

    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >


    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/tv_index"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="3dp"
        android:text="22"
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:gravity="center"/>
    <View
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:layout_margin="1dp"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="2dp"
        android:orientation="horizontal" >

      <ImageView android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:scaleType="center"

          android:src="@drawable/error_img"
          android:layout_gravity="center"
          android:id="@+id/detai_img"/>

      <ScrollView android:layout_width="match_parent"
          android:layout_gravity="center"
          android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_gravity="center"
            android:orientation="vertical">
          <TextView
              android:id="@+id/detai_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:textColor="#000000"
              android:textSize="14sp"
              android:visibility="visible"/>
          <TextView
              android:id="@+id/detai_info"
              android:textColor="#000000"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:ellipsize="end"
              android:maxLines="6"
              android:textSize="16sp"
              android:minLines="3"/>
        </LinearLayout>
      </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/openmap_detai_leftbtn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginStart="3dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="操作"
          android:textColor="#3333FF"
          android:textSize="14.0sp"/>
      <ImageView
          android:layout_width="2dp"
          android:id="@+id/iv_line1"
          android:layout_height="match_parent"
          android:src="@drawable/line_s" />
      <TextView
          android:id="@+id/openmap_detai_middlebtn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="路径"
          android:textColor="#3333FF"
          android:textSize="14.0sp" />
      <ImageView
          android:layout_width="2dp"
          android:id="@+id/iv_line2"
          android:layout_height="match_parent"
          android:src="@drawable/line_s" />
      <TextView
          android:id="@+id/openmap_detai_rightbtn"
          android:layout_width="0dp"
          android:layout_height="match_parent"

          android:layout_marginRight="3dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="图文"
          android:textColor="#3333FF"
          android:textSize="14.0sp" />

      <ImageView
          android:layout_width="2dp"
          android:id="@+id/iv_line3"
          android:visibility="gone"
          android:layout_height="match_parent"
          android:src="@drawable/line_s" />

      <TextView
          android:id="@+id/openmap_detai_other"
          android:layout_width="0dp"
          android:layout_height="match_parent"

          android:layout_marginRight="3dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="工单"
          android:visibility="gone"
          android:textColor="#3333FF"
          android:textSize="14.0sp" />
    </LinearLayout>
    </LinearLayout>
  </LinearLayout>



</androidx.cardview.widget.CardView>