<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     >

  <com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4CAF50"
        app:elevation="4dp" />

  >
  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/appbar"
      android:visibility="visible" >

    <include layout="@layout/base_baidumap"/>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/latlng_step"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="#9000"
      android:layout_marginBottom="5dp"
      android:orientation="horizontal"
      android:visibility="visible" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="步幅"
        android:textColor="#eee" />

    <RadioGroup
        android:id="@+id/rg_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

      <RadioButton
          android:id="@+id/rb_step_one"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:tag="1"
          android:text="x1"
          android:textColor="#ffffff"/>

      <RadioButton
          android:id="@+id/rb_step_tow"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:tag="5"
          android:text="x5"
          android:textColor="#ffffff" />

      <RadioButton
          android:id="@+id/rb_step_three"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:tag="10"
          android:text="x10"
          android:textColor="#ffffff" />

      <RadioButton
          android:id="@+id/rb_step_fore"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:checked="true"
          android:tag="20"
          android:text="x30"
          android:textColor="#ffffff" />

      <RadioButton
          android:id="@+id/rb_step_five"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:tag="50"
          android:text="x100"
          android:textColor="#ffffff" />
    </RadioGroup>
  </LinearLayout>

  <RelativeLayout
      android:id="@+id/adjust_layout"
      android:layout_width="180dp"
      android:layout_height="180dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="130dp"
      android:layout_marginRight="10dp" >

    <include layout="@layout/inlude_dir" />
  </RelativeLayout>


  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/appbar">
    <TextView android:layout_width="wrap_content"
        android:background="#9000"

           android:padding="3dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:textColor="#ffffff"
            android:id="@+id/tv_lalnginfo"
           android:layout_height="wrap_content"/>
  </RelativeLayout>
</RelativeLayout>